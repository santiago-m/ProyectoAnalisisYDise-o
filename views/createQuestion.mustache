    <form action="/" method="get">
      <input type="submit" value="Cancelar" name="mainMenu_btn" class="btn btn-outline-primary" id="mainMenu_btn" />
    </form>
  </div>

  <center>
    <br>
    <h2>Creacion de pregunta</h2>

    <br>

    <div class="container">

    	<form action="/submitQuestion" method="POST">

        <div class="span1">
    			<span>Pregunta: </span> <input class="form-control" id="txt_question" name="txt_question" value="" placeholder="Â¿?" type="text">
